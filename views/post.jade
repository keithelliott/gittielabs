extends postlayout

block content
    div
        h3
            a(href=post.url)
                = post.title
        h4
                span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
                span(style='padding-left: 20px; font-size: 75%') by
                span(style='padding-left: 3px; font-size: 85%')
                    = post.author
        br
        p
            a(href="https://twitter.com/gittielabs", class="twitter-follow-button", data-show-count="false", data-lang="en", data-size="large") Follow @gittielabs
        p
            div.post.content
                != post.content
        div.tags
            - each tag in post.tags
                a(href=tagUrl(tag))
                    span.label.label-info(style='margin-right:3px;') #{tag}
        br
        div#disqus_thread
            a(href="http://disqus.com", class="dsq-brlink") comments powered by
                span.logo-disqus Disqus
        div
            p Blog powered by nodejs and
                a(style='margin-left: 2px;', href="http://jsantell.github.io/poet/") poet

